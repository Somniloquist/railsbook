<div class="container">

  <div id="profile-header" class="container">
    <div class="row">
      <div class="col-md-3">
        <%= gravatar_for @user, 160 %>
        <h1><%= "#{@user.firstname} #{@user.lastname}" %></h1>
        <% unless @user == current_user %>
          <%= render "friend_form" %>
        <% end %>
      </div>
      <div class="col-md-9">
      </div>
    </div>
  </div>

</div>
