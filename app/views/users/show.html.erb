<div id="cover-image">
</div>
<div class="container">

  <div id="profile-header" class="container">
    <div class="row">
      <div class="col-md-2">
        <%= gravatar_for @user, 160 %>
      </div>
      <div class="col-md-10">
        <div id="profile-info">
          <h1><%= "#{@user.firstname} #{@user.lastname}" %></h1>
          <% unless @user == current_user %>
            <%= render "friend_form" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
