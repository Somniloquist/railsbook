<div class="container col-lg-6">
  <%= render "friend_requests" if current_user == @user %>  

  <h1>Friends</h1>
  <% @friendships.each do |friendship| %>
    <div class="row friend-card">
      <div class="col-3 col-sm-2"> 
        <div><%= link_to gravatar_for(friendship.friend, 50), user_path(friendship.friend) %></div>
      </div>
      <div class="col-7">
        <div><%= link_to "#{friendship.fullname}", user_path(friendship.friend) %></div>
        <div><%= friendship.friend.email %></div>
      </div>
      <div class="col-2">
        <%= render partial: "friend_form", locals: { :@user => friendship.friend } unless friendship.friend == current_user %>
      </div>
    </div>
  <% end %>
</div>