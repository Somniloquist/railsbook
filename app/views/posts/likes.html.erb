<% provide(:title, "Likes") %>

<div class="jumbotron">
  <div class="container mt-25">
    <div class="row">
      <div class="col-12 col-lg-6">
        <h1><%= pluralize(@number_of_likes, "user") %> liked this post.</h1>
        <% @likes_users.each do |user| %>
          <%= link_to avatar_for(user, 30), user_path(user) %>
        <% end %>
      </div>
    </div>
  </div>
</div>