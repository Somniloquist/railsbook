<div id="post-likes-form-<%= @post.id %>" >
  <% unless current_user.likes?(@post) %>

    <%= form_with model: @post.likes.build do |f| %>
      <div><%= hidden_field_tag :post_id, @post.id %></div>
      <%= f.submit "+ like", class: "post-link" %>
    <% end %>

  <% else %>

    <%= form_with model: @post.likes.find_by(user_id: current_user), method: :delete do |f| %>
      <div><%= hidden_field_tag :post_id, @post.id %></div>
      <%= f.submit "- like", class: "post-link" %>
    <% end %>

  <% end %>
</div>