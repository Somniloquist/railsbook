<div class="jumbotron">
  <div class="container form-container col-md-6">

    <div class="form-card">
    <p>Forgot your password? Enter your email address and we'll send you a recovery link.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
        </div>

        <div class="actions form-group">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>
