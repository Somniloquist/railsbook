<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to "railsbook", root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
    <% if user_signed_in? %>
      <ul class="navbar-nav">
        <% if current_user.has_pending_friend_requests? %>
          <li id="friend-request-notification" class="nav-item">
            <%= link_to pluralize(current_user.friend_requests.count, "friend request"), friends_user_path(current_user), class: "nav-link"%>
          </li>
        <% end %>
        <li><%= link_to "All users", users_path, class: "nav-link" %></li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= avatar_for(current_user, 30) %> <%= current_user.fullname %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Home", root_path, class: "dropdown-item" %>
            <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "User settings", user_settings_path(current_user), class: "dropdown-item" %>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-light" %>
    <% end %>
  </div>
</nav>