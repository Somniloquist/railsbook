<div class="row">
  <%= form_with model: @comment, scope: :comment, url: yield(:url), class: "comment-form-#{@commentable_id} full-width-form w-100" do |f| %>

    <div class="form-group">
      <%= f.label :body, class: "sr-only" %>
      <%= f.text_area :body, placeholder: "Leave a comment." %>
    </div>

    <div class="form-group">
      <%= f.submit "Comment", class: "btn btn-primary float-right" %>
    </div>

  <% end %>
</div>